syntax on				" use syntax colouring
colorscheme railscasts	" railscasts colouring, to be specific
set guifont=Monaco:h11	" 11pt Monaco
set guioptions-=T		" no toolbar
set tabstop=4			" display tabs as four spaces wide
set columns=82			" default windows have 82 columns
set lines=54			" default windows have 54 lines

