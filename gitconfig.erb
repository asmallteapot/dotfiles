[user]
	name = <%= ENV['HUMAN'] %>
	email = <%= ENV['EMAIL'] %>
[alias]
	checkout-submodules = submodule update --init --recursive
	a   = add
	ap  = add --patch
	br  = branch
	ci  = commit
	cia = commit --all
	cim = commit --amend
	co  = checkout
	com = submodule update --init --recursive
	df  = diff
	dfc = diff --cached
	fl  = flow
    history = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --all
    h = history
    push = push --set-upstream
    rb  = rebase
	rbi = rebase --interactive
    rbc = rebase --continue
    rbs = rebase --skip
    sm = submodule
    sma = submodule add
	st  = status
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = <%= ENV['EDITOR'] %>
	staged = diff --cached
	autocrlf = input
[apply]
	whitespace = fix
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

